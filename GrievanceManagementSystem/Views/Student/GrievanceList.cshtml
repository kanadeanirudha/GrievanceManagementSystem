@using GMS.Model
@model List<GrievanceDetailsModel>
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4"></h1>
    @*<ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Grievance List</li>
        </ol>*@
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Grievance List
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Grievance Number</th>
                        <th>Grievance Type</th>
                        <th>Priority</th>
                        <th>Concern Department</th>
                        <th>Send To</th>
                        <th>Status</th>
                        <th id="ActionColumnId">Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Grievance Number</th>
                        <th>Grievance Type</th>
                        <th>Priority</th>
                        <th>Concern Department</th>
                        <th>Send To</th>
                        <th>Status</th>
                        <th id="ActionColumnId">Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.GrievanceNumber</td>
                                <td>@item.GrievanceTypeName</td>
                                <td>@item.PriorityName</td>
                                <td>@item.DepartmentName</td>
                                <td>@item.GrievanceSendToName</td>
                                <td>@item.StatusName</td>
                                <td></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#ActionColumnId").removeClass();
    });
</script>